<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".employee.Employee"
    android:layout_marginEnd="34dp"
    android:layout_marginStart="34dp"
    android:layout_marginTop="50dp">


    <TextView
        android:id="@+id/employee_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/employee_details"
        android:textColor="#E91E63"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/emp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/employee_id"
        android:layout_marginTop="20dp"
        android:hint="@string/enter_name"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"/>

    <EditText
        android:id="@+id/emp_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emp_name"
        android:layout_marginTop="20dp"
        android:hint="@string/enter_salary"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"/>

    <EditText
        android:id="@+id/emp_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emp_salary"
        android:layout_marginTop="20dp"
        android:hint="@string/enter_age"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"/>

