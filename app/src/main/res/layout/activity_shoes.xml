   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Shose Shop"
       android:textStyle="bold"
       android:gravity="center"

       android:textColor="#E91E63"
       android:id="@+id/shope_id"
       android:layout_marginTop="20dp"
       android:textSize="30sp"
       />
    <EditText
           android:layout_width="180dp"
           android:layout_height="40dp"
           android:id="@+id/use_id"
           android:layout_marginTop="80dp"
           android:hint="Enter Id"
           />
    <EditText
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/name_id"
        android:hint="Enter Name"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="200dp"
        />

    <EditText
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/age_id"
        android:hint="Enter Age"
        android:layout_marginTop="140dp" />
    <EditText
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/city_id"
        android:hint="Enter City"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="200dp" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/contact_id"
        android:hint="Contact Number"
        android:layout_marginTop="200dp" />
    <EditText
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/email_id"
        android:hint="Enter Email"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="200dp" />

 <RadioGroup
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
  android:id="@+id/radio_group_id"
     android:layout_marginTop="280dp">

  <RadioButton
      android:layout_width="100dp"
      android:layout_height="20dp"
      android:text="Male"
   android:id="@+id/male_id" />

  <RadioButton
      android:layout_width="100dp"
      android:layout_height="20dp"
   android:text="Female"
   android:id="@+id/female_id" />

 </RadioGroup>


