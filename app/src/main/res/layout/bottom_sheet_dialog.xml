<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bottom_sheet_dialog_background"
    android:paddingBottom="28dp"
    >

    <TextView
        android:id="@+id/txt_bottom_sheet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/crimson"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/oops_please_check_your_inputs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="28dp"
       />

    <TextView
        android:id="@+id/txt_bottom_sheet_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="@string/please_ensure_all_required_fields_are_filled_out_correctly"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_bottom_sheet_title"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="28dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:id="@+id/btn_bottom_sheet"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_bottom_sheet_des"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/btn_crimson"
        android:text="@string/okay"
        android:textColor="@color/white"
        />



</androidx.constraintlayout.widget.ConstraintLayout>