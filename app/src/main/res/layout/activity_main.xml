<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".dashboard.DashBoardActivity">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/app_bar"
            style="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D81383"
            app:menu="@menu/top_app_bar"
            app:navigationIcon="@android:drawable/menu_frame"
            app:navigationIconTint="@color/white"
            app:title="Shop"
            app:titleMarginStart="60dp"
            app:titleTextColor="@color/white" />

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.google.android.material.appbar.AppBarLayout>


        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="64dp">


            <TextView
                android:id="@+id/amazon"
                android:layout_width="200sp"
                android:layout_height="100sp"
                android:background="@color/white"
                android:gravity="center"
                android:onClick="onPickMe"
                android:text="@string/amazon"
                android:textColor="#D81383"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="205dp"
                android:layout_height="100dp"
                android:layout_marginStart="200dp"
                android:background="@color/white"
                android:src="@drawable/amazon_logo"
                android:contentDescription="@string/logo" />

        </RelativeLayout>


        <!--        cardView-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnCloths"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="@color/white"
                    android:onClick="onCloth"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="10dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/cloth"
                        android:scaleType="fitStart"
                        android:src="@drawable/cloth" />

                    <TextView
                        android:id="@+id/clothing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:text="@string/cloth"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </com.google.android.material.card.MaterialCardView>

                <!--                app:cardElevation="30dp"-->

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnInfoForm"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/white"
                    android:onClick="onForm"
                    app:cardCornerRadius="25dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/electronic"
                        android:scaleType="fitStart"
                        android:src="@drawable/form" />

                    <TextView
                        android:id="@+id/electronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:text="@string/form"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <!--                app:strokeColor="@color/green"-->
                <!--                app:strokeWidth="2dp"-->

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_home"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="@color/white"
                    android:onClick="onHome"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="10dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/home"
                        android:scaleType="fitStart"
                        android:src="@drawable/home" />

                    <TextView
                        android:id="@+id/home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/home"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </com.google.android.material.card.MaterialCardView>

                <!--                app:cardElevation="30dp"-->

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_guardian"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/white"
                    android:onClick="onGuardian"
                    app:cardCornerRadius="25dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/beauty"
                        android:scaleType="fitStart"
                        android:src="@drawable/beauty" />

                    <TextView
                        android:id="@+id/beauty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/guardian"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal">

                <!--                app:cardElevation="30dp"-->

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_groceries"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="@color/white"
                    android:onClick="onGroceries"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="10dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/groceries"
                        android:scaleType="fitStart"
                        android:src="@drawable/groceries" />

                    <TextView
                        android:id="@+id/groceries"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/groceries"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_pharmacy"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/white"
                    android:onClick="onPharmacy"
                    app:cardCornerRadius="25dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/pharmacy"
                        android:scaleType="fitStart"
                        android:src="@drawable/pharmacy" />

                    <TextView
                        android:id="@+id/pharmacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/pharmacy"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/user_info"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginStart="4dp"
                        android:backgroundTint="@color/white"
                        android:onClick="onUserInfo"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@string/groceries"
                            android:scaleType="fitStart"
                            android:src="@drawable/elect" />

                        <TextView
                            android:id="@+id/a_lifecycle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="40dp"
                            android:fontFamily="sans-serif"
                            android:text="@string/a_lifecycle"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/carv"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@color/white"
                        android:onClick="onCARV"
                        app:cardCornerRadius="25dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@string/adaptor_rv"
                            android:scaleType="fitStart"
                            android:src="@drawable/cloth" />

                        <TextView
                            android:id="@+id/txt_carv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="40dp"
                            android:fontFamily="sans-serif"
                            android:text="@string/adaptor_rv"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/customAdaptor"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginStart="4dp"
                        android:backgroundTint="@color/white"
                        android:onClick="onCustomAdaptor"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@string/adaptor_rv"
                            android:scaleType="fitStart"
                            android:src="@drawable/beauty" />

                        <TextView
                            android:id="@+id/custom_adaptor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="40dp"
                            android:fontFamily="sans-serif"
                            android:text="@string/adaptor_lv"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/fragment"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginStart="4dp"
                        android:backgroundTint="@color/white"
                        android:onClick="onFragmentToActivity"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@string/a"
                            android:scaleType="fitStart"
                            android:src="@drawable/home" />

                        <TextView
                            android:id="@+id/fragment_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="40dp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="@string/a_to_f"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:paddingBottom="24dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/custom_dialog"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginStart="4dp"
                        android:backgroundTint="@color/white"
                        android:onClick="onCustomDialog"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@string/custom_dialog"
                            android:scaleType="fitStart"
                            android:src="@drawable/groceries" />

                        <TextView
                            android:id="@+id/dialog"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="40dp"
                            android:fontFamily="sans-serif"
                            android:text="@string/custom_dialog"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/products"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginStart="4dp"
                        android:backgroundTint="@color/white"
                        android:onClick="onProduct"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@string/pharmacy"
                            android:scaleType="fitStart"
                            android:src="@drawable/pharmacy" />

                        <TextView
                            android:id="@+id/product_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="40dp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="@string/in_operations"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </com.google.android.material.card.MaterialCardView>



                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</ScrollView>