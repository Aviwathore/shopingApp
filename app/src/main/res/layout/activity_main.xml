<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".dashboard.DashBoardActivity">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/app_bar"
            style="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D81383"
            app:menu="@menu/top_app_bar"
            app:navigationIcon="@android:drawable/menu_frame"
            app:navigationIconTint="@color/white"
            app:title="Shop"
            app:titleMarginStart="60dp"
            app:titleTextColor="@color/white" />

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.google.android.material.appbar.AppBarLayout>


        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="64dp">


            <TextView
                android:id="@+id/amazon"
                android:layout_width="200sp"
                android:layout_height="100sp"
                android:background="@color/white"
                android:gravity="center"
                android:onClick="onPickMe"
                android:text="@string/amazon"
                android:textColor="#D81383"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="205dp"
                android:layout_height="100dp"
                android:layout_marginStart="200dp"
                android:background="@color/white"
                android:src="@drawable/amazon_logo" />

        </RelativeLayout>


        <!--        cardView-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnCloths"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:backgroundTint="@color/white"
                    android:onClick="onCloth"
                    android:layout_marginStart="4dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="10dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="TODO"
                        android:scaleType="fitStart"
                        android:src="@drawable/cloth" />

                    <TextView
                        android:id="@+id/clothing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/cloth"
                        android:textSize="22sp"
                        android:textStyle="italic|bold" />

                </com.google.android.material.card.MaterialCardView>

                <!--                app:cardElevation="30dp"-->

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_ele"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/white"
                    android:onClick="onElectronics"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:contentDescription="TODO"
                        android:scaleType="fitStart"
                        android:src="@drawable/elect" />

                    <TextView
                        android:id="@+id/electronics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/electronic"
                        android:textSize="22sp"
                        android:textStyle="italic|bold" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <!--                app:strokeColor="@color/green"-->
                <!--                app:strokeWidth="2dp"-->

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_home"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:backgroundTint="@color/white"
                    android:onClick="onHome"
                    app:cardCornerRadius="25dp"
                    android:layout_marginStart="4dp"
                    app:cardElevation="10dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="TODO"
                        android:scaleType="fitStart"
                        android:src="@drawable/home" />

                    <TextView
                        android:id="@+id/home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/home"
                        android:textSize="22sp"
                        android:textStyle="italic|bold" />

                </com.google.android.material.card.MaterialCardView>

                <!--                app:cardElevation="30dp"-->

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_beauty"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/white"
                    android:onClick="onBeauty"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:contentDescription="TODO"
                        android:scaleType="fitStart"
                        android:src="@drawable/beauty" />

                    <TextView
                        android:id="@+id/beauty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/beauty"
                        android:textSize="22sp"
                        android:textStyle="italic|bold" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <!--                app:cardElevation="30dp"-->

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_groceries"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="@color/white"
                    android:onClick="onGroceries"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="10dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:contentDescription="TODO"
                        android:scaleType="fitStart"
                        android:src="@drawable/groceries" />

                    <TextView
                        android:id="@+id/groceries"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/groceries"
                        android:textSize="22sp"
                        android:textStyle="italic|bold" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_pharmacy"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/white"
                    android:onClick="onPharmacy"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:contentDescription="TODO"
                        android:scaleType="fitStart"
                        android:src="@drawable/pharmacy" />

                    <TextView
                        android:id="@+id/pharmacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/pharmacy"
                        android:textSize="22sp"
                        android:textStyle="italic|bold" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:background="#ED4C83"
                    android:padding="5dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="104dp"
                        android:layout_height="70dp"
                        android:id="@+id/fragment"
                        android:onClick="onFragmentToActivity"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/black"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment_to_activityy"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="15dp"
                            android:textStyle="bold" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="104dp"
                        android:layout_height="70dp"
                        android:id="@+id/carv"
                        android:onClick="onCARV"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/black"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginStart="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/custom_adaptor_for_recycler_view"
                           android:layout_gravity="center"
                            android:textStyle="bold"
                            android:padding="5dp"/>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="104dp"
                        android:layout_height="70dp"
                        android:id="@+id/user_info"
                        android:onClick="onUserInfo"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/black"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginStart="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/activity_lifecycle"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:padding="5dp"/>

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:background="#ED4C83"
                    android:padding="5dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="104dp"
                        android:layout_height="70dp"
                        android:id="@+id/shoes"
                        android:onClick="onShoes"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/black"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shoes"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="104dp"
                        android:layout_height="70dp"
                        android:id="@+id/Employee"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/black"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        android:onClick="onEmployee"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginStart="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/employee_post"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:padding="5dp"/>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="104dp"
                        android:layout_height="70dp"
                        android:id="@+id/users"
                        app:strokeWidth="1dp"
                        android:onClick="onUser"
                        app:strokeColor="@color/black"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginStart="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/user_post_json_obj"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:padding="5dp"/>

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:background="#ED4C83"
                    android:padding="5dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="104dp"
                        android:layout_height="70dp"
                        android:id="@+id/textField"
                        android:onClick="onTextField"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/black"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/inputfield"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="104dp"
                        android:layout_height="70dp"
                        android:id="@+id/products"
                        app:strokeWidth="1dp"
                        android:onClick="onProduct"
                        app:strokeColor="@color/black"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginStart="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/intent"
                            android:layout_gravity="center"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:padding="5dp"/>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="104dp"
                        android:layout_height="70dp"
                        android:id="@+id/customAdaptor"
                        android:onClick="onCustomAdaptor"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/black"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginStart="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/custom_adaptor_for_list_view"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:padding="5dp"/>

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:background="#ED4C83"
                    android:padding="5dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="104dp"
                        android:layout_height="70dp"
                        android:id="@+id/fragment_to_fragment_onSingle_Activity"
                        android:onClick="onFragmentToFragmentSingleActivity"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/black"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="10dp"
                        app:cardBackgroundColor="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment_to_fragment_single_activity"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal"
                            android:textStyle="bold" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="104dp"
                        android:layout_height="70dp"
                        android:id="@+id/layout_id"
                        app:strokeWidth="1dp"
                        android:onClick="onLayout"
                        app:strokeColor="@color/black"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginStart="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/layout"
                            android:layout_gravity="center"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:padding="5dp"/>

                    </com.google.android.material.card.MaterialCardView>

<!--                    <com.google.android.material.card.MaterialCardView-->
<!--                        android:layout_width="125dp"-->
<!--                        android:layout_height="70dp"-->
<!--                        android:id="@+id/services"-->
<!--                        android:onClick="onServices"-->
<!--                        app:strokeWidth="1dp"-->
<!--                        app:strokeColor="@color/black"-->
<!--                        app:cardCornerRadius="15dp"-->
<!--                        app:cardElevation="15dp"-->
<!--                        app:cardBackgroundColor="@color/white"-->
<!--                        android:layout_marginStart="10dp" >-->

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:gravity="center_horizontal"-->
<!--                            android:text="@string/service"-->
<!--                            android:layout_gravity="center"-->
<!--                            android:textStyle="bold"-->
<!--                            android:padding="5dp"/>-->

<!--                    </com.google.android.material.card.MaterialCardView>-->

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="125dp"
                        android:layout_height="70dp"
                        android:id="@+id/custom_dialog"
                        android:onClick="onCustomDialog"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/black"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginStart="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/custom_dialog_box"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:padding="5dp"/>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</ScrollView>