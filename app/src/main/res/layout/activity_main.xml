<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".dashboard.DashBoard">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/amazon"
                android:layout_width="210sp"
                android:layout_height="100sp"
                android:layout_marginTop="64dp"
                android:background="@color/white"
                android:gravity="center"
                android:onClick="onPickMe"
                android:text="@string/amazon"
                android:textColor="#D81383"
                android:textSize="30sp"
                android:textStyle="bold" />


                    <ImageView
                        android:layout_width="210dp"
                        android:layout_height="100dp"
                        android:background="@color/white"
                        android:layout_marginStart="200dp"
                        android:layout_marginTop="64dp"
                        android:src="@drawable/amazon_logo"
                        />


            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/app_bar"
                style="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D81383"
                app:menu="@menu/top_app_bar"
                app:navigationIcon="@android:drawable/menu_frame"
                app:navigationIconTint="@color/white"
                app:title="Shop"
                app:titleMarginStart="60dp"
                app:titleTextColor="@color/white" />

        </FrameLayout>


        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            app:cardCornerRadius="800dp">

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/btnCloths"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="190dp"
            android:background="@color/white"
            android:onClick="onCloth"
            android:orientation="vertical"
            app:layout_anchor="@+id/card">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:scaleType="fitStart"
                android:src="@drawable/cloth" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/clothing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="50sp"
                    android:text="@string/clothing"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_ele"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="190dp"
            android:background="@color/white"
            android:onClick="onElectronics"
            android:orientation="vertical"
            app:layout_anchor="@+id/card">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:scaleType="fitStart"
                android:src="@drawable/elect" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/electronics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="40sp"
                    android:layout_marginTop="11dp"
                    android:text="@string/electronics"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_home"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="380dp"
            android:background="@color/white"
            android:onClick="onHome"
            android:orientation="vertical"
            app:layout_anchor="@+id/card">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:scaleType="fitStart"
                android:src="@drawable/home" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="60sp"
                    android:layout_marginTop="10dp"
                    android:text="@string/home"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_beauty"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="380dp"
            android:background="@color/white"
            android:onClick="onBeauty"
            android:orientation="vertical"
            app:layout_anchor="@+id/card">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:scaleType="fitStart"
                android:src="@drawable/beauty" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/beauty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="50sp"
                    android:text="@string/beauty"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_pharmacy"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="570dp"
            android:background="@color/white"
            android:onClick="onPharmacy"
            android:orientation="vertical"
            app:layout_anchor="@+id/card">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:scaleType="fitStart"
                android:src="@drawable/pharmacy" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/pharmacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="50sp"
                    android:layout_marginTop="8dp"
                    android:text="@string/pharmacy"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_groceries"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="570dp"
            android:background="@color/white"
            android:onClick="onGroceries"
            android:orientation="vertical"
            app:layout_anchor="@+id/card">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:scaleType="fitStart"
                android:src="@drawable/groceries" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/groceries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="40sp"
                    android:layout_marginTop="8dp"
                    android:text="@string/groceries"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginStart="10sp"
                android:background="@color/white"
                android:layout_marginTop="780dp"
                android:gravity="center"
                android:onClick="onFragmentToActivity"
                android:text="Fargment To Activity"
                android:textColor="#E91E63"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/carv"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="780dp"
                android:background="@color/white"
                android:gravity="center"
                android:onClick="onCARV"
                android:text="Custom Adaptor For Recycler View"
                android:textColor="#673AB7"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_info"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:gravity="center"
                android:onClick="onUserInfo"
                android:text="Activity LifeCycle"
                android:textColor="#673AB7"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="-40dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="Shoes Data"
                android:textColor="#E91E63"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/shoes"
                android:layout_gravity="center"
                android:onClick="onShoes" />


            <TextView
                android:id="@+id/Employee"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="-95sp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:gravity="center"
                android:onClick="onEmployee"
                android:text="Employee(POST)"
                android:textColor="#E91E63"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/users"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="-40dp"
                android:background="@color/white"
                android:gravity="center"
                android:onClick="onUser"
                android:text="User (POST JSON Obj)"
                android:textColor="#673AB7"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textField"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="-95sp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:gravity="center"
                android:onClick="onTextField"
                android:text="InputField"
                android:textColor="#673AB7"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/products"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="100dp"
                android:layout_marginTop="-40dp"
                android:background="@color/white"
                android:gravity="center"
                android:onClick="onProduct"
                android:text="Product"
                android:textColor="#E91E63"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/customAdaptor"
                android:onClick="onCustomAdaptor"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="-95sp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="Custom Adaptor For List View"
                android:textColor="#E91E63"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment_to_fragment_onSingle_Activity"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="100dp"
                android:layout_marginTop="-40dp"
                android:background="@color/white"
                android:gravity="center"
                android:onClick="onFragmentToFragmentSingleActivity"
                android:text="Fragment To Fragment (Single Activity) "
                android:textColor="#3F51B5"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</ScrollView>