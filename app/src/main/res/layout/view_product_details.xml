<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/hint_pro_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="@string/product_id"
                android:padding="10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_pro_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:padding="10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/hint_pro_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_pro_id"
                android:layout_marginStart="10dp"
                android:hint="@string/product_name"
                android:padding="10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_pro_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_pro_id"
                android:layout_marginStart="110dp"
                android:padding="10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/hint_pro_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_pro_name"
                android:layout_marginStart="10dp"
                android:hint="@string/product_category"
                android:padding="10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_pro_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_pro_name"
                android:layout_marginStart="130dp"
                android:padding="10dp"
                android:textColor="@color/black" />

            <ImageButton
                android:id="@+id/img_btn_update_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/baseline_edit_24"
                app:tint="@color/crimson"
                android:contentDescription="@string/edit" />

            <ImageButton
                android:id="@+id/img_btn_delete_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/white"
                android:src="@drawable/baseline_more_vert_24"
                app:tint="#6C6C6D"
                android:contentDescription="@string/edit" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>